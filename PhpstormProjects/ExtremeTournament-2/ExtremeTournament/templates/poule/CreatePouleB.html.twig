{% extends 'baseback.html.twig' %}
{% block body %}
    <div class="row" xmlns="http://www.w3.org/1999/html">
        <div  style="display-model: flex;align-items: center;margin-top: 80px; padding: 130px;">

            <div class="card-body">
                <div class="card">
                    <h5 class="card-title " > <strong>ADD Poule - Admin  </strong></h5>

                    <!-- General Form Elements -->
                    {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
                    <label for="inputText" class="col-sm-15 col-form-label">Nom Poule </label>
                    <div class="col-sm-10">
                        {{ form_widget(f.nom_poule,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.nom_poule,{'attr':{'class':'text-danger'}}) }}



                    <label for="inputText" class="col-sm-3 col-form-label">Choose which Tournament </label>
                    <div class="col-sm-10">
                        {{ form_widget(f.id_t,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.id_t,{'attr':{'class':'text-danger'}}) }}

                    <br/>
                    <div class="col-sm-15" style="display: flex;align-items: center;justify-content: center">

                        {{ form_widget(f.Add,{'attr':{'class':'btn btn-primary'}}) }}
                    </div>

                    {{ form_end(f) }}

                </div>
            </div>

        </div>

    </div>
{% endblock %}